
<div class="container">
  <h1><%= link_to @lesson.name, "http://#{@lesson.url}" %></h1>

  <p><%= @lesson.description %></p>
  <h2>Here's how people rated this lab:</h2>
  <p><strong><font color="#ff0000"><%= flash[:notice] %></font></strong></p>
  <div class="row">

    <div class="col-sm-6">
      <div class="panel panel-warning">
        <div class="panel-heading">
          <h3 class="panel-title">Frustration <span class='glyphicon glyphicon-fire'></span></h3>
        </div>
        <div class="panel-body">
          <h2><%= @lesson.average_frustration %> / 10</h2>
        </div>
      </div>

    </div>

    <div class="col-sm-6">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title">Quality <span class='glyphicon glyphicon-star'></span></h3>
        </div>
        <div class="panel-body">
          <h2><%= @lesson.average_quality %> / 10</h2>
        </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Helpfulness <span class='glyphicon glyphicon-ok'></span></h3>
        </div>
        <div class="panel-body">
          <h2><%= @lesson.average_helpfulness %> / 10</h2>
        </div>
      </div>

    </div>

    <div class="col-sm-6">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Time Taken <span class='glyphicon glyphicon-time'></span></h3>
        </div>
        <div class="panel-body">
          <h2><%= @lesson.average_time_taken %></h2>
        </div>
      </div>
    </div>
  </div>

  <table class="table table-striped">

    <tr>
      <th>Module</th>
      <th>Subject</th>
      <th>Unit</th>
      <th>Lesson</th>
      <th>Lesson Type</th>
    </tr>
   <tr>
     <th><%= location[0] %></th>
     <th><%= location[1] %></th>
     <th><%= location[2] %></th>
     <th><%= location[3] %></th>
     <th><%= @lesson.lesson_type %></th>
   </tr>


 </table>





  <h3><%= link_to "Review this lesson", controller: "reviews", action: "new", lesson_id: @lesson.id %><br></h3>
  <%= link_to "Edit this lesson", edit_lesson_path(@lesson) if current_user.admin %><br>
  <%= link_to "Back to All Lessons", lessons_path %>


</div>
